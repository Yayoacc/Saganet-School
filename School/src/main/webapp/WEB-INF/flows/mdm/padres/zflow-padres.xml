<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
        
	<input name="id" />
	<decision-state id="agregarPadre">
		<if test="id == 'nuevo'" then="nuevoPadre" else="Lista" />
		
	</decision-state>
	<action-state id="nuevoPadre">
		<evaluate expression="PadreServ.nuevo()" result="requestScope.padre" />
        <transition to="agregarEditar" />
    </action-state>
    
	<view-state id="Lista">
		<on-entry>
			<evaluate expression="PadreServ.modeloTodos()"
				result="viewScope.modelo" />
		</on-entry>
		<transition on="agregar" to="agregarEditar">
			<evaluate expression="PadreServ.nuevo()"
				result="requestScope.padre" />
		</transition>
		<transition on="editar" to="agregarEditar">
			<set name="requestScope.padre"
				value="viewScope.modelo.seleccionado" />
			<set name="requestScope.padre" value="viewScope.modelo.seleccionado" />
		</transition>
		<transition on="detalle" to="detalle">
			<set name="requestScope.padre"
				value="viewScope.modelo.seleccionado" />
			<set name="requestScope.padre" value="viewScope.modelo.seleccionado" />
		</transition>
		<transition on="eliminar">
			<evaluate
				expression="PadreServ.eliminarPadre(viewScope.modelo.seleccionado)" />
			<evaluate expression="PadreServ.modeloTodos()"
				result="viewScope.modelo" />
		</transition>
		<transition on="correo">
			<set name="viewScope.padre" value="viewScope.modelo.seleccionado" />
			<evaluate expression="MailService.nuevo()" result="viewScope.correo"/>
		</transition>
		<transition on="enviar" to="Lista">
			<set name="viewScope.correo.to" value="padre.correoElectronico"/>
			<evaluate expression="MailService.sendMail(viewScope.correo)"/>
		</transition>
	</view-state>
	<view-state id="agregarEditar">
		<on-entry>	
			<set name="viewScope.padre" value="requestScope.padre" />
			<evaluate expression="DominiosServ.modeloGeneroDO()"
				result="viewScope.modeloGeneros" />
		</on-entry>
		<transition on="guardar" to="agregarEditarExitoso">
			<evaluate expression="PadreServ.guardar(viewScope.padre)" />
		</transition>
		<transition on="cancelar" to="agregarEditarCancelado" />
	</view-state>
	<view-state id="detalle">
		<on-entry>
			<set name="viewScope.padre" value="requestScope.padre" />
		</on-entry>
		<transition on="regresar" to="Lista" />
	</view-state>
	
	<end-state id="agregarEditarCancelado" />
	<end-state id="agregarEditarExitoso" />
</flow>