<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://saganet.com.mx/webflow/spring-webflow-2.0.xsd">

	<view-state id="listado">
		<on-entry>
			<evaluate expression="AlumnoServ.modeloTodos()" result="viewScope.modelo" />
		</on-entry>
		
		<transition on="agregar" to="agregarEditar">
			<evaluate expression="AlumnoServ.nuevo()" result="requestScope.alumno" />
		</transition>
	</view-state>
	
	<view-state id="agregarEditar">
		<on-entry>
			<set name="viewScope.alumno" value="requestScope.alumno" />
		</on-entry>
		
		<transition on="guardar" to="agregarEditarExitoso">
			<evaluate expression="AlumnoServ.guardar(viewScope.alumno)" />
		</transition>
		
		<transition on="cancelar" to="agregarEditarCancelado" />
	</view-state>
	
	<end-state id="agregarEditarExitoso" />
	<end-state id="agregarEditarCancelado" />

</flow>