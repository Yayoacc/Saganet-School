<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://saganet.com.mx/webflow/spring-webflow-2.0.xsd">

	<view-state id="listado">
		<on-entry>
			<evaluate expression="AlumnoServ.modeloTodos()"
				result="viewScope.modelo" />
		</on-entry>

		<transition on="agregar" to="agregarEditar">
			<evaluate expression="AlumnoServ.nuevo()"
				result="requestScope.alumno" />
		</transition>

		<transition on="editar" to="agregarEditar">
			<set name="requestScope.alumno"
				value="viewScope.modelo.seleccionado" />
		</transition>

		<transition on="detalle" to="detalle">
			<set name="requestScope.alumno"
				value="viewScope.modelo.seleccionado" />
		</transition>

		<transition on="eliminar">
			<evaluate
				expression="AlumnoServ.eliminarAlumno(viewScope.modelo.seleccionado)" />
			<evaluate expression="AlumnoServ.modeloTodos()"
				result="viewScope.modelo" />
		</transition>
	</view-state>

	<view-state id="agregarEditar">
		<on-entry>
			<set name="viewScope.alumno" value="requestScope.alumno" />
			<evaluate expression="DominiosServ.modeloGeneroDO()"
				result="viewScope.modeloGeneros" />
			<evaluate expression="PadreServ.modeloTodos()"
				result="viewScope.modeloPadre" />
		</on-entry>

		<transition on="guardar" to="agregarEditarExitoso">
			<evaluate expression="AlumnoServ.guardar(viewScope.alumno)" />
		</transition>
		<transition on="agregarPadre" to="flujoPadre">
			 <set name="flashScope.accion" value="'nuevo'" />
			  <set name="flowScope.alumno" value="viewScope.alumno" />
		</transition>


		<!-- <transition on="agregarPadre" to="agregarPadres"> -->

		<!-- <set name="requestScope.alumno" -->
		<!-- value="viewScope.alumno" /> -->
<!-- </transition> -->

		<transition on="cancelar" to="agregarEditarCancelado" />
	</view-state>

	<subflow-state id="flujoPadre" subflow="mdm/padres">
		<input name="id" value="accion"/>
		<transition on="agregarEditarExitoso" to="agregarEditar">
			<set name="requestScope.alumno" value="flowScope.alumno" />
		</transition>
		<transition on="agregarEditarCancelado" to="agregarEditar">
		 	<set name="requestScope.alumno" value="flowScope.alumno" />
		</transition>
	</subflow-state>

	<view-state id="agregarPadres">
		<on-entry>
			<evaluate expression="DominiosServ.modeloGeneroDO()"
				result="viewScope.modeloGeneros" />
			<set name="viewScope.alumno" value="requestScope.alumno" />
		</on-entry>

		<transition on="guardar" to="agregarEditarExitoso">
			<evaluate expression="AlumnoServ.guardar(viewScope.alumno)" />
		</transition>
		<transition on="cancelar" to="agregarEditarCancelado" />
	</view-state>

	<view-state id="detalle">
		<on-entry>
			<set name="viewScope.alumno" value="requestScope.alumno" />
		</on-entry>

		<transition on="regresar" to="listado" />
	</view-state>

	<end-state id="agregarEditarExitoso" />
	<end-state id="agregarEditarCancelado" />


</flow>