<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://saganet.com.mx/webflow/spring-webflow-2.0.xsd">

	<view-state id="listado">
		<on-entry>
			<evaluate expression="GrupoServ.modeloTodos()" result="viewScope.modelo" />
		</on-entry>
		
		<transition on="agregar" to="agregarEditar">
			<evaluate expression="GrupoServ.nuevo()" result="requestScope.grupo" />
		</transition>
		
		<transition on="editar" to="agregarEditar">
			<set name="requestScope.grupo" value="viewScope.modelo.seleccionado" />
		</transition>
		
		<transition on="detalle" to="detalle">
			<set name="requestScope.grupo" value="viewScope.modelo.seleccionado" />
		</transition>
	</view-state>
	
	<view-state id="agregarEditar">
		<on-entry>
			<set name="viewScope.grupo" value="requestScope.grupo" />
		</on-entry>
		
		<transition on="guardar" to="agregarEditarExitoso">
			<evaluate expression="GrupoServ.guardar(viewScope.grupo)" />
		</transition>
		
		<transition on="cancelar" to="agregarEditarCancelado" />
	</view-state>
	
	<view-state id="detalle">
		<on-entry>
			<set name="viewScope.grupo" value="requestScope.grupo" />
		</on-entry>
		
		<transition on="regresar" to="listado" />
	</view-state>
	
	<end-state id="agregarEditarExitoso" />
	<end-state id="agregarEditarCancelado" />

</flow>